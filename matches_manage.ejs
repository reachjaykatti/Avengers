
<%- include('../partials/head', {title}) %>
<h1>Manage Matches — <%= series.name %></h1>
<button type="button" class="btn btn-link" onclick="history.back()">← Back</button>

<div class="grid" style="margin: 1rem 0;">
  <div>
    <a class="btn" href="/admin/series/<%= series.id %>/matches/new">+ New Match</a>
    <a class="btn" href="/admin/series/<%= series.id %>/matches/bulk" style="margin-left: .5rem;">Bulk Import</a>
  </div>
</div>

<table class="table">
  <tr><th>Name</th><th>Teams</th><th>Start (UTC)</th><th>Entry</th><th>Status</th><th>Actions</th></tr>
  <% matches.forEach(m => { %>
    <tr>
      <td><%= m.name %></td>
      <td><%= m.team_a %> vs <%= m.team_b %></td>
      <td><%= m.start_time_utc %></td>
      <td><%= m.entry_points %></td>
      <td><%= m.status %></td>
      <td>
        <a class="btn" href="/admin/matches/<%= m.id %>/edit">Edit</a>
        <a class="btn" href="/admin/matches/<%= m.id %>">Declare</a>
      </td>
    </tr>
  <% }) %>
</table>
<%- include('../partials/foot') %>
